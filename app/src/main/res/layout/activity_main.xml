<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0E354C"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fine HEALTH APP"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#E3860F"
        android:background="#46336650"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardabout"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="25dp"
                    android:src="@drawable/about"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="#14F034"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardcause"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="25dp"
                    android:src="@drawable/causes"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Causes"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="#48F016"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardsymptoms"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="25dp"
                    android:src="@drawable/symptoms"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Symptoms"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="#36EB06"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardprevention"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="25dp"
                    android:src="@drawable/prevention"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prevention"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="#53EB09"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardtel"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="25dp"
                    android:src="@drawable/tollfree"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="#17E90B"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardlocation"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="25dp"
                    android:src="@drawable/location"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Areas affected"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="#4DE60A"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>








</LinearLayout>